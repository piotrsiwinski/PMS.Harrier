@model PMS.Harrier.DataAccessLayer.Models.Issue

@{
    ViewBag.Title = "title";
}

<h2>Szczegóły zadania</h2>

<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.LabelFor(x => x.Description)
        </dt>
        <dd>
            @Html.DisplayFor(x=>x.Description)
        </dd>
        
        <dt>
            @Html.LabelFor(x=>x.LoggedHours)
        </dt>
        <dd>
            @Html.DisplayFor(x=>x.LoggedHours)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Zaloguj czas", "LogTime", new {id = @Model.IssueId}, new {@class = "btn btn-info"})
    @Html.ActionLink("Zakończ zadanie", "FinishIssue", new {id = @Model.IssueId}, new {@class = "btn btn-info"})
</div>