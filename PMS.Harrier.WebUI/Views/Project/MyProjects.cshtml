@model System.Collections.Generic.IEnumerable<PMS.Harrier.DataAccessLayer.Models.Project>

@{
    ViewBag.Title = "Moje projekty";
}

<h2>Moje projekty</h2>
@if (@Model.Any())
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Nazwa projektu</th>
                <th>Data utworzenia</th>
                <th>Operacje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in @Model)
            {
                <tr>
                    <td>@p.ProjectName</td>
                    <td>@p.StartDate</td>
                    <td>
                        @Html.ActionLink("Szczegóły", "Details", new { id = p.ProjectId }, new { @class = "btn btn-info" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span aria-hidden="true">&times;</span>
            <span class="sr-only">Zamknij</span>
        </button>
        Nie jesteś przypisany do żadnego projektu!
    </div>
}