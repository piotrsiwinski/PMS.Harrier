@model PMS.Harrier.DataAccessLayer.Models.Issue

@{
    ViewBag.Title = "title";
}

<h2>Logowanie czasu - @Model.Title</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h4>Podaj wymagane dane</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(x=> x.IssueId)
    <div class="form-group">
        @Html.LabelFor(p => p.LoggedHours, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(p => p.LoggedHours, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(p => p.LoggedHours, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Utwórz" class="btn btn-default" />
            </div>
        </div>
}