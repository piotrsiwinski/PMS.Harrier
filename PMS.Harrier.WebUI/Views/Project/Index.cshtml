@model System.Collections.Generic.IEnumerable<PMS.Harrier.DataAccessLayer.Models.Project>

@{
    ViewBag.Title = "Wszystkie projekty";
}

<h2>Podgląd projektów</h2>
<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>Nazwa projektu</th>
        <th>Data utworzenia</th>
        <th>Operacje</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var p in @Model)
    {
        <tr>
            <td>@p.Name</td>
            <td>@p.CreationDateTime</td>
            <td>
                @Html.ActionLink("Szczegóły", "Index", null, new {@class = "btn btn-info"})
                @Html.ActionLink("Edytuj", "Index", null, new {@class = "btn btn-primary"})
                @Html.ActionLink("Usuń", "Index", null, new {@class = "btn btn-danger"})
            </td>
        </tr>
    }
    </tbody>
</table>

@Html.ActionLink("Dodaj nowy", "Create", null, new {@class = "btn btn-default"})
