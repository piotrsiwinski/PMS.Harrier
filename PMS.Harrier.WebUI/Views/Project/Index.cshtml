@model System.Collections.Generic.IEnumerable<PMS.Harrier.DataAccessLayer.Models.Project>

@{
    ViewBag.Title = "Wszystkie projekty";
}

<h2>Podgląd projektów</h2>
@if(@Model.Any())
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Nazwa projektu</th>
                <th>Data utworzenia</th>
                <th>Operacje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in @Model)
            {
                <tr>
                    <td>@p.ProjectName</td>
                    <td>@p.StartDate</td>
                    <td>
                        
                        @Html.ActionLink("Szczegóły", "Details", new {id = p.ProjectId}, new {@class = "btn btn-info"})
                        @Html.ActionLink("Edytuj", "Create", new {id = p.ProjectId }, new {@class = "btn btn-primary"})
                        @Html.ActionLink("Usuń", "Index", new {id = p.ProjectId }, new {@class = "btn btn-danger"})
                        @Html.ActionLink("Dodaj osoby", "Index", new {id = p.ProjectId }, new {@class = "btn btn-danger"})
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @Html.ActionLink("Dodaj nowy", "Create", null, new { @class = "btn btn-success" })
}
else
{
    <div class="alert alert-warning alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span aria-hidden="true">&times;</span>
            <span class="sr-only">Zamknij</span>
        </button>
        Brak projektów do wyświetlenia.
        Kliknij @Html.ActionLink("tutaj", "Create"), aby utworzyć teraz nowy projekt.
    </div>
}
