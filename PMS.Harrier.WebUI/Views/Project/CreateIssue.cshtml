@model PMS.Harrier.DataAccessLayer.Models.Issue
@{
    ViewBag.Title = "title";
}

<h2>Dodawanie zadania</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h4>Dodaj nowe zadanie</h4>
    <hr/>
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
    @Html.HiddenFor(x=>x.ProjectId)

    <div class="form-group">
        @Html.LabelFor(x => x.Title, new {@class = "control-label col-md-2"})
        <div class="col-md-10">
            @Html.EditorFor(x=> x.Title, new {htmlAttributes = new {@class = "form-control"}})
            @Html.ValidationMessageFor(x=>x.Title, "", new {@class = "text-danger"})
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(x=>x.Description, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(x=> x.Description, new {@class = "form-control"})
            @Html.ValidationMessageFor(x=>x.Description, "", new {@class = "text-danger"})
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <button type="submit" class="btn btn-default">Utwórz</button>
        </div>
    </div>



}