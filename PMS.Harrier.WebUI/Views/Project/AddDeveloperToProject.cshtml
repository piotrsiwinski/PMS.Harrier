@model List<PMS.Harrier.WebUI.ViewModels.AddDeveloperViewModel>

@{
    ViewBag.Title = "title";

}

<h2>Dodaj do projektu</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="form-horizontal">
        <h4>Dodaj osoby</h4>

        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>Imię</th>
                <th>Nazwisko</th>
                <th>Wybierz</th>
            </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < Model.Count; i++)
                {
                    <tr>
                        @Html.HiddenFor(x => Model[i].DeveloperId)
                        @Html.HiddenFor(x => Model[i].ProjectId)
                        <td>
                            @Html.DisplayFor(n => Model[i].FirstName)
                            @Html.HiddenFor(x => Model[i].FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(n => Model[i].LastName)
                            @Html.HiddenFor(x => Model[i].LastName)
                            
                        </td>
                        <td>
                            @Html.CheckBoxFor(n => Model[i].IsSelected)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        
        <!-- Save button -->
        <div class="form-group">
            <div class="col-md-offset-0 col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-default" />
                @Html.ActionLink("Wróć", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}
